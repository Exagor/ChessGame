<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011638"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextPersonName2"
        android:layout_width="220dp"
        android:layout_height="76dp"
        android:ems="10"
        android:hint="Nom du joueur noir"
        android:autofillHints="nom_du_joueur_noir"
        android:inputType="textPersonName"
        android:textColor="#F4C095"
        android:textColorHint="#F4C095"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/button"
        android:layout_width="173dp"
        android:layout_height="91dp"
        android:backgroundTint="#F4C095"
        android:text="START"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#011638"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chess Game"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#F4C095"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <EditText
        android:id="@+id/editTextPersonName1"
        android:layout_width="228dp"
        android:layout_height="68dp"
        android:ems="10"
        android:hint="Nom du joueur blanc"
        android:autofillHints="@nom du joueur blanc"
        android:inputType="textPersonName"
        android:textColor="#F4C095"
        android:textColorHint="#F4C095"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />


</androidx.constraintlayout.widget.ConstraintLayout>
